{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "projects": {
    "configs": {
      "type": "library",
      "root": "libs/configs",
      "entryFile": "index",
      "sourceRoot": "libs/configs/src",
      "compilerOptions": {
        "tsConfigPath": "libs/configs/tsconfig.lib.json"
      }
    },
    "options": {
      "type": "library",
      "root": "libs/options",
      "entryFile": "index",
      "sourceRoot": "libs/options/src",
      "compilerOptions": {
        "tsConfigPath": "libs/options/tsconfig.lib.json"
      }
    }
  }
}